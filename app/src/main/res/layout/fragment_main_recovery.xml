<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRecoveryFragment">

    <TextView
        android:id="@+id/tv_wake_up_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/wake_up_hour"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wake_up_hour_rating"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/x"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wake_up_hour"
        app:layout_constraintStart_toEndOf="@+id/tv_wake_up_hour"
        app:layout_constraintTop_toTopOf="@+id/tv_wake_up_hour" />

    <TextView
        android:id="@+id/tv_last_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/last_night"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_wake_up_hour" />

    <ImageView
        android:id="@+id/iv_last_night_rating"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/checkmark"
        app:layout_constraintBottom_toBottomOf="@+id/tv_last_night"
        app:layout_constraintStart_toEndOf="@+id/tv_last_night"
        app:layout_constraintTop_toTopOf="@+id/tv_last_night" />

</androidx.constraintlayout.widget.ConstraintLayout>